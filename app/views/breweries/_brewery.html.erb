<div id="<%= dom_id brewery %>">
  <h2>
    <%= @brewery.name %>
  </h2>
  <p>
    <strong>Established in </strong>
    <%= @brewery.year %>
  </p>
  <p>
    <strong>Amount of beers: </strong> 
    <%= @brewery.beers.count %>
  </p>
  <!-- <%= brewery.beers.to_a %> -->
  <p>
 <% brewery.beers.each do |beer| %>
   <%= link_to beer.name, beer %>
 <% end %>
</p>
</div>
